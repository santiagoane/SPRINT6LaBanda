<header>
    <div class="header-left">
        <a href="/"><div class="logo"></div></a>
        <h3>WaveRunners</h3>
    </div>
    <form action="/products/search" method="get">
    <input type="text" name="search" id="search" placeholder="Busca productos">
    </form>
    <div class="header-right">
        <ul class="navbar-nav align-items-center">
            <% if (locals.isLogged) { %>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/images/usuarios/<%= locals.userLogged.avatar %>" width="40" style="border-radius: 100%;">
                        Hi <%= locals.userLogged.name %> 
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/profile">Mi perfil</a>
                        <li><hr class="dropdown-divider"></li>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </ul>
                </li>
            <% } else { %>
                <li class="nav-item"><a class="nav-link" href="/register">Registrate</a></li>
                <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <% } %>
        </ul>
        
</header>